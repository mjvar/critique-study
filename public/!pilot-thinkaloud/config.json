{
    "$schema": "https://raw.githubusercontent.com/revisit-studies/study/main/src/parser/StudyConfigSchema.json",
    "studyMetadata": {
        "title": "Pilot Thinkaloud",
        "version": "pilot",
        "authors": [
            "Matthew Varona",
            "Emily Wall",
            "Carolina Nobre"
        ],
        "date": "2026-02-11",
        "description": "Pilot study for thinkaloud component",
        "organizations": [
            "University of Toronto",
            "Emory University"
        ]
    },
    "uiConfig": {
        "contactEmail": "contact@revisit.dev",
        "helpTextPath": "!pilot-thinkaloud/assets/help.md",
        "logoPath": "revisitAssets/revisitLogoSquare.svg",
        "withProgressBar": true,
        "autoDownloadStudy": false,
        "withSidebar": true,
        "recordAudio": true
    },
    "importedLibraries": [
        "mic-check"
    ],
    "baseComponents": {
        "stimulus-read": {
            "type": "image",
            "recordAudio": false,
            "style": {
                "width": "800px",
                "height": "auto"
            },
            "instruction": "Please read and understand the following visualization. Then, click 'next' to start the recording.",
            "nextButtonEnableTime": 30000,
            "nextButtonText": "Start Recording",
            "response": []
        },
        "stimulus-words": {
            "type": "image",
            "recordAudio": false,
            "style": {
                "width": "800px",
                "height": "auto"
            },
            "instruction": "In 1-3 words, how would you describe the visualization you just read?",
            "response": [
                {
                    "id": "stimulus-words-response",
                    "prompt": "In 1-3 words, how would you describe the visualization you just read?",
                    "type": "shortText"
                }
            ]
        },
        "stimulus-speak": {
            "type": "image",
            "style": {
                "width": "800px",
                "height": "auto"
            },
            "instruction": "Please critique the visualization you just read. Your critiques may focus on strengths or weaknesses of the visualization.",
            "response": []
        }

    },
    "components": {
        "prolific-id": {
            "type": "questionnaire",
            "recordAudio": false,
            "response": [
                {
                    "id": "prolific-id-response",
                    "prompt": "Welcome to the study! Please enter your Prolific ID below.",
                    "required": true,
                    "type": "shortText",
                    "placeholder": "Enter your Prolific ID"
                }
            ]
        },
        "introduction": {
            "type": "markdown",
            "recordAudio": false,
            "path": "!pilot-thinkaloud/assets/intro.md",
            "response": [
                {
                    "id": "q-sidebar",
                    "prompt": "I consent to participate in this study.",
                    "location": "belowStimulus",
                    "type": "checkbox",
                    "options": ["Yes"]
                }
            ]
        },
        "thinkaloud-instructions": {
            "type": "markdown",
            "recordAudio": false,
            "path": "!pilot-thinkaloud/assets/thinkaloud-instructions.md",
            "response": []
        },
        "stimulus-1-read": {
            "baseComponent": "stimulus-read",
            "recordAudio": false,
            "path": "!pilot-thinkaloud/assets/refugees.png"
        },
        "stimulus-1-words": {
            "baseComponent": "stimulus-words",
            "recordAudio": false,
            "path": "!pilot-thinkaloud/assets/refugees.png"
        },
        "stimulus-1-speak": {
            "baseComponent": "stimulus-speak",
            "recordAudio": true,
            "path": "!pilot-thinkaloud/assets/refugees.png"
        },
        "stimulus-2-read": {
            "baseComponent": "stimulus-read",
            "recordAudio": false,
            "path": "!pilot-thinkaloud/assets/defense.png"
        },
        "stimulus-2-words": {
            "baseComponent": "stimulus-words",
            "recordAudio": false,
            "path": "!pilot-thinkaloud/assets/defense.png"
        },
        "stimulus-2-speak": {
            "baseComponent": "stimulus-speak",
            "recordAudio": true,
            "path": "!pilot-thinkaloud/assets/defense.png"
        }
    },
    "sequence": {
        "order": "fixed",
        "components": [
            "prolific-id",
            "introduction",
            "$mic-check.co.audioTest",
            "thinkaloud-instructions",
            {
                "id": "summary-first",
                "conditional": true,
                "order": "latinSquare",
                "components": [
                    {
                        "order": "fixed",
                        "components": ["stimulus-1-read", "stimulus-1-words",  "stimulus-1-speak"]
                    },
                    {
                        "order": "fixed",
                        "components": ["stimulus-2-read", "stimulus-2-words",  "stimulus-2-speak"]
                    }
                ]
            },
            {
                "id": "summary-last",
                "conditional": true,
                "order": "latinSquare",
                "components": [
                    {
                        "order": "fixed",
                        "components": ["stimulus-1-read", "stimulus-1-speak", "stimulus-1-words"]
                    },
                    {
                        "order": "fixed",
                        "components": ["stimulus-2-read", "stimulus-2-speak", "stimulus-2-words"]
                    }
                ]
            },
            {
                "id": "no-summary",
                "conditional": true,
                "order": "latinSquare",
                "components": [
                    {
                        "order": "fixed",
                        "components": ["stimulus-1-read", "stimulus-1-speak"]
                    },
                    {
                        "order": "fixed",
                        "components": ["stimulus-2-read", "stimulus-2-speak"]
                    }
                ]
            }
        ]
    }
}